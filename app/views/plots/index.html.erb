<% if @plots.empty? %>
	<h3>Aucune tache en base de donn√©e</h3>
<% else %> 
	<table class="table table-striped">
		<thead>
			<tr>
				<td>Surface</td>
				<td>Commune</td>
				<td>Section</td>
				<td>Numero</td>
				<td>GPS</td>
				<td>Location</td>
