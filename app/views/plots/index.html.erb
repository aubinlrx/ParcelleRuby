				<td></td>
			</tr>
		</thead>
		<tbody>
			<% @plots.each do |plot| %>
			<tr>
				<td><%= plot.plot_information.surface %></td>
				<td><%= plot.plot_information.commune %></td>
				<td><%= plot.plot_information.section %></td>
				<td><%= plot.plot_information.numero %></td>
				<td><%= plot.plot_information.gps %></td>
				<td><%= plot.plot_information.location %></td>
